<div class="flex flex-col justify-center w-full max-w-3xl gap-6 mx-auto align-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class= 'flex flex-col justify-center w-full gap-6 px-4 py-2 mx-auto border-2 border-black max-w3xl align-center'>
      <h1 class="text-center">Sign up</h1>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="m-auto field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

        <div class="m-auto field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>

      <div class="m-auto field">
        <%= f.label :surname %><br />
        <%= f.text_field :surname %>
      </div>

      <div class="m-auto field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="m-auto field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="self-start px-4 py-2 m-auto border-2 border-black actions">
        <%= f.submit "Sign up" %>
      </div>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
